#!/usr/bin/env coffee

createMailr = ->
  Mailr = require '../lib/mailr'
  new Mailr()

nomnom = require 'nomnom'
nomnom.script('mailr')
nomnom.command('send')
  .options
    account:
      abbr: 'a'
      metavar: 'ACCOUNT'
      help: 'the account from which to send'
    emailFile:
      position: 1
      help: 'name of email file to send'
      required: true
  .help("send an email")
  .callback (opts) ->
    mailr = createMailr()
    console.log "Sending..."
    mailr.send(filename: opts.emailFile, account: opts.account) \
      .then (response) ->
        console.log response
      .fail (err) ->
        console.log "ERROR: #{err}"

nomnom.command('contacts')
  .options
    account:
      abbr: 'a'
      metavar: 'ACCOUNT'
      help: 'the account from which to send'
    update:
      abbr: 'u'
      flag: true
      help: 'updates the local contacts file'
  .help("gets the contacts")
  .callback (opts) ->
    mailr = createMailr()
    if opts.update
      mailr.updateContacts opts.account, (err, contacts) ->
        if err?
          console.log "ERROR: #{err}"
        else
          for contact in contacts
            console.log contact

nomnom.command('addresses')
  .help("shows the available from addresses")
  .callback ->
    config = require '../lib/config/config'
    config.load()
    for address in config.getFromAddresses()
      console.log address


nomnom.parse()
